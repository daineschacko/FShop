<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#9C27B0" />
            <gradient android:angle="-90" android:startColor="#673AB7" android:endColor="#460551"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#673AB7" />
            <solid android:color="#9C27B0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#673AB7" />
            <gradient android:angle="-90" android:startColor="#9C27B0" android:endColor="#520262" />
        </shape>
    </item>

</selector>